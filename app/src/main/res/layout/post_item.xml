<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <include
        android:id="@+id/user_profile_header"
        layout="@layout/user_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/buttonOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/user_profile_header" />

    <TextView
        android:id="@+id/textPostContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Hello everyone, this is my first social media post."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_header" />

    <ImageView
        android:id="@+id/imageLikeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPostContent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintStart_toEndOf="@id/imageLikeIcon"
        app:layout_constraintTop_toTopOf="@id/imageLikeIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageLikeIcon" />

    <TextView
        android:id="@+id/textPostDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="December 4th, 2023 at 11:30"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageLikeIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageLikeIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>

